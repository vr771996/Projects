<section>
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div><br>
        <table class="table mt-3" id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg"></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-products/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure want to delete item {{this.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>