<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height:25rem;">
                    <img style = "height:12rem; width:13rem;"src="/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <p class="card-text">Rs.{{this.product.Price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text">{{this.product.Description}}</p>                    
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>